@model IEnumerable<AssignmentPlanner.Models.Assignment>

<h2>Assignment Modification Tool</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Assignment Name</th>
            <th>Due Date</th>
            <th>Description</th>
            <th>Edit</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.AssignName</td>
                <td>@item.DueDate</td>
                <td>@item.AssignDesc</td>
                <td>
                    <a asp-controller="Admin" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
